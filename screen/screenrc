hardstatus alwayslastline "%{.Wk}%-w%{.bw}%n %t%{-}%+w %= %c"

msgwait 1
defscrollback 100000
vbell off
startup_message off
# Ensure backspace gets produced under xfce-term
bindkey -d ^@ stuff ^?
bind x
bind ^x

escape ^Ba

screen -t rem 5
screen -t log 4
screen -t app 3
screen -t con 2
screen -t shl 1
screen -t cfg 0
select 1
